<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.survey.web.questioncategory.QuestionCategoryEdit"
        datasource="questionCategoryDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.survey.web.questioncategory">
    <dsContext>
        <datasource id="questionCategoryDs"
                    class="com.company.survey.entity.reference.QuestionCategory"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="questionCategoryDs">
            <column width="250px">
                <field id="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
